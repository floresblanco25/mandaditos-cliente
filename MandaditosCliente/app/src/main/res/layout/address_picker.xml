<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<com.google.android.gms.maps.MapView
		android:id="@+id/map_view_picker"
		android:layout_weight="0.8"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

	</com.google.android.gms.maps.MapView>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:padding="16dp">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Escríbe la dirección donde recogeremos el paquete."
			android:layout_marginBottom="24dp"
			style="@style/title"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Ejemplo: Residencial X, poligono X, casa X, Santa tecla, La libertad."
			style="@style/info"
			android:layout_marginBottom="8dp"/>

		<EditText
			android:id="@+id/address_pickerEditText"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="16dp"
			android:hint="Dirección"
			style="@style/rounded_edittext"/>

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="fill_parent">

			<Button
				android:id="@+id/address_pickerButtonNext"
				android:layout_height="wrap_content"
				android:text="Siguiente"
				android:layout_gravity="bottom|center"
				android:background="@drawable/rounded_button_soft"
				android:textColor="#FFFFFF"
				android:layout_width="match_parent"
				android:layout_margin="16dp"/>

		</FrameLayout>

	</LinearLayout>

</LinearLayout>

